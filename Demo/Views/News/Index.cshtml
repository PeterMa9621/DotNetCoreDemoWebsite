@model IEnumerable<Demo.Models.DataModel.News.NewsEntity>
@{
    ViewData["Title"] = "Index";
}
<link rel="stylesheet" href="~/css/news/listview.css" />
<div>
    <div class="background-top">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-3 col-md-1"></div>
                <div class="col-lg-6 col-md-10">
                    <!-- News Slide -->
                    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                        <ol class="carousel-indicators">
                            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                        </ol>
                        <div class="carousel-inner slide-box">
                            <div class="carousel-item active">
                                <img class="d-block w-100" src="https://media.mojang.com/blog-image/2c34ca1217c7d95e76a6f8d646adf9208f78145a/blogmcnet.png" alt="First slide">
                            </div>
                            <div class="carousel-item">
                                <img class="d-block w-100" src="https://media.mojang.com/blog-image/2c34ca1217c7d95e76a6f8d646adf9208f78145a/blogmcnet.png" alt="Second slide">
                            </div>
                            <div class="carousel-item">
                                <img class="d-block w-100" src="https://media.mojang.com/blog-image/2c34ca1217c7d95e76a6f8d646adf9208f78145a/blogmcnet.png" alt="Third slide">
                            </div>
                        </div>
                        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                </div>
                <div class="col-lg-3 col-md-1"></div>
            </div>
        </div>
    </div>
    <div class="background-middle"></div>

    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-3 col-md-1"></div>
            <div class="col-lg-6 col-md-10">
                <!-- News List View -->
                <div class="news-list-view" style="z-index: 1">
                    <div class="card mt-2 news-list-view">
                        <div class="card-header">News</div>
                        <div class="card-body">
                            @if (Model.Count() > 0)
                            {
                            <div class="list-group">
                                @foreach (var news in Model)
                                {
                                    <a asp-action="Detail" asp-route-id="@news.Id"
                                       class="list-group-item list-group-item-action flex-column align-items-start">
                                        <div class="row">
                                            <div class="col-2 my-auto">
                                                <img src="~/pic/home-banner.jpg" width="100%" alt="Avatar">
                                            </div>
                                            <div class="col-10">
                                                <div class="row">
                                                    <h4>@news.Title</h4>
                                                </div>
                                                <div class="row">
                                                    <span class="badge badge-primary">@news.Category</span>
                                                </div>
                                                <div class="row justify-content-between mt-3">
                                                    <small>Author: @news.Author</small>
                                                    <small>@Demo.Util.TimeUtil.ConvertTimeStampToDateTime(news.CreatedAt).ToString()</small>
                                                </div>
                                            </div>
                                        </div>
                                    </a>
                                }
                            </div>
                            }
                            else 
                            {
                                <div class="card card-body">No news</div>
                            }
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-1"></div>
        </div>

    </div>
</div>

