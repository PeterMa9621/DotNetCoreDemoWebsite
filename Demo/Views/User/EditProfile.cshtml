@model Demo.Models.DataModel.User.UserEntity
@{
    ViewData["Title"] = "EditProfile";
}
<link rel="stylesheet" href="~/css/user/profile.css" />
<div>
    <div class="background-top">
    </div>
    <div class="background-middle">
        <div class="container">
            <div class="card card-body profile-card">
                <div class="row">
                    <div class="col-md-4 my-auto">
                        <div class="text-center">
                            <img src="~/pic/logo.png" height="100px" width="100px">
                        </div>
                        <p class="text-center">@Model.UserName</p>
                    </div>
                    <div class="col-md-8">
                        <div class="form-group">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        </div>

                        <ul class="nav nav-tabs" id="myTab" role="tablist">
                            <li class="nav-item active">
                                <a class="nav-link active" id="info-tab" data-toggle="tab" href="#info" role="tab" aria-controls="info" aria-selected="true">Profile</a>
                            </li>
                        </ul>
                        <div class="tab-content" id="myTabContent">
                            <div class="tab-pane fade show active" id="info" role="tabpanel" aria-labelledby="info-tab">
                                <div class="card card-body" style="border: none">
                                    <form method="post" asp-action="Edit">
                                        <div class="row">
                                            <div class="col-6">
                                                <h5>Email</h5>
                                            </div>
                                            <div class="col-6">
                                                <input name="email" class="text-left form-control" asp-for="Email">
                                            </div>
                                        </div>
                                        <div class="row mt-3">
                                            <div class="col-6">
                                                <h5>Join At</h5>
                                            </div>
                                            <div class="col-6">
                                                <p class="text-left">@Model.RegDate</p>
                                            </div>
                                        </div>
                                        <div class="row mt-3">
                                            <div class="col-6">
                                                <h5>PhoneNumber</h5>
                                            </div>
                                            <div class="col-6">
                                                <input name="phoneNumber" class="text-left form-control" asp-for="PhoneNumber">
                                            </div>
                                        </div>
                                        <div class="row justify-content-center">
                                            <div class="form-group">
                                                <span style="color: green"></span>
                                            </div>
                                        </div>
                                        <div class="row justify-content-center">
                                            <button class="btn btn-outline-primary">Edit</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="background-bottom">

    </div>
</div>